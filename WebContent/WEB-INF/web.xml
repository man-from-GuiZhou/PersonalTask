<?xml version="1.0" encoding="UTF-8"?>
<!--<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">-->
    <web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
             version="3.1">
    <!-- web-app 报错的原因居然是web骨架不同，intellij采用的骨架版本为3.1，原项目文件则采用的是3.0-->
    <display-name>playTask</display-name>
    <welcome-file-list>
        <welcome-file>init.do</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>initPlayer</servlet-name>
        <servlet-class>controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>initPlayer</servlet-name>
        <url-pattern>/init.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
</web-app>
